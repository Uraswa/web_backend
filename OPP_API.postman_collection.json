{
  "info": {
    "name": "OPP API - Owner Portal",
    "description": "Owner portal endpoints under /api/opp/* plus the owner OPP info endpoint.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "YOUR_ACCESS_TOKEN_HERE",
      "type": "string"
    },
    {
      "key": "oppId",
      "value": "10",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "123",
      "type": "string"
    },
    {
      "key": "logisticsOrderId",
      "value": "7",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "11",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"your_email@example.com\",\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "login"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "User OPP",
      "item": [
        {
          "name": "Get User OPP",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/user/opp",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "user",
                "opp"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "OPP - Statistics",
      "item": [
        {
          "name": "Get OPP Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/statistics",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "statistics"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "OPP - Orders",
      "item": [
        {
          "name": "Get Orders (All)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/orders",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "orders"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Orders (Waiting)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/orders?status=waiting",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "orders"
              ],
              "query": [
                {
                  "key": "status",
                  "value": "waiting"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Order Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/orders/{{orderId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "orders",
                "{{orderId}}"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "OPP - Logistics Orders",
      "item": [
        {
          "name": "Get Logistics Orders (All)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/logistics-orders",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "logistics-orders"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Logistics Orders (Incoming)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/logistics-orders?direction=incoming",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "logistics-orders"
              ],
              "query": [
                {
                  "key": "direction",
                  "value": "incoming"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Logistics Orders (Outgoing)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/logistics-orders?direction=outgoing",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "logistics-orders"
              ],
              "query": [
                {
                  "key": "direction",
                  "value": "outgoing"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "OPP - Operations",
      "item": [
        {
          "name": "Receive From Seller",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_id\": {{orderId}},\n  \"product_id\": {{productId}},\n  \"count\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/receive-from-seller",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "receive-from-seller"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Give To Logistics",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_id\": {{orderId}},\n  \"logistics_order_id\": {{logisticsOrderId}},\n  \"product_id\": {{productId}},\n  \"count\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/give-to-logistics",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "give-to-logistics"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Receive From Logistics",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"logistics_order_id\": {{logisticsOrderId}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/receive-from-logistics",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "receive-from-logistics"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Deliver (No Rejections)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_id\": {{orderId}},\n  \"rejected_products\": []\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/deliver",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "deliver"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Deliver (With Rejections)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_id\": {{orderId}},\n  \"rejected_products\": [\n    {\"product_id\": {{productId}}, \"count\": 1}\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/opp/{{oppId}}/deliver",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "opp",
                "{{oppId}}",
                "deliver"
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
